ALGORITHM read_sentence(VAR sentence: STRING)
VAR
  len, characters, vowels: INTEGER
BEGIN
  FOR len FROM 0 TO sentence.length STEP step  DO
    IF (sentence[len] == ['A', 'E', 'I', 'O', 'U']) THEN
      vowels := vowels+1;
    ELSE_IF (sentence[len] == '.') THEN
      write(len);
      BREAK;
    ELSE
      characters := characters + 1
    END_IF
    len := len + 1
  END_FOR
END